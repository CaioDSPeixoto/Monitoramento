@model MonitorDeServicos.Dominio.Entidade.Monitoramento

@{
    ViewData["Title"] = "Detalhes do Serviço";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Detalhes do Monitoramento</h1>

    <div class="card">
        <div class="card-header bg-primary text-white">
            Informações do Monitoramento
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-4">Nome</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Nome)</dd>

                <dt class="col-sm-4">Tipo</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Tipo)</dd>

                <dt class="col-sm-4">Endereço</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Endereco)</dd>

                <dt class="col-sm-4">Ativo</dt>
                <dd class="col-sm-8">
                    <span class="badge @(Model.Ativo ? "bg-success" : "bg-danger")">
                        @(Model.Ativo ? "Ativo" : "Inativo")
                    </span>
                </dd>
            </dl>
        </div>
    </div>

    <div class="d-flex justify-content-between mt-3">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
    </div>
</div>
