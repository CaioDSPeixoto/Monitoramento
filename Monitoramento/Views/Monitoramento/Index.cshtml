@model IEnumerable<MonitorDeServicos.Dominio.Entidade.Monitoramento>

@{
    ViewData["Title"] = "Lista dos Serviços";
}
<div class="text-center mb-5">
    <h1 class="text-center mb-4">Lista de Serviços</h1>
</div>

<div class="table-responsive">
    <div class="mb-3 text-end">
        <a asp-action="Create" class="btn btn-primary">Criar Novo</a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.Nome)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Tipo)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Endereco)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Ativo)</th>
                <th scope="col" class="text-end">Ações</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="9" class="text-center text-muted">Nenhuma aplicação cadastrada.</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                        <td>@Html.DisplayFor(modelItem => item.Tipo)</td>
                        <td>@Html.DisplayFor(modelItem => item.Endereco)</td>
                        <td>
                            <span class="badge @(item.Ativo ? "bg-success" : "bg-danger")">
                                @(item.Ativo ? "Ativo" : "Inativo")
                            </span>
                        </td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Detalhes</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Excluir</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
