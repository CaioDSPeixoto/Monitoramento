@model IEnumerable<MonitorDeServicos.Dominio.Entidade.Webhook>

@{
    ViewData["Title"] = "Lista de Webhooks";
}

<div class="text-center mb-5">
    <h1 class="text-center mb-4">Lista de Webhooks</h1>
</div>

<div class="table-responsive">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <p class="lead"></p>
        <a asp-action="Create" class="btn btn-primary">Criar Novo</a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.First().Nome)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.First().NomeResponsavel)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.First().Url)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.First().Ativo)</th>
                <th scope="col" class="text-end">Ações</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                        <td>@Html.DisplayFor(modelItem => item.NomeResponsavel)</td>
                        <td> @Html.DisplayFor(modelItem => item.Url) </td>
                        <td>
                            <span class="badge @(item.Ativo ? "bg-success" : "bg-danger")">
                                @(item.Ativo ? "Ativo" : "Inativo")
                            </span>
                        </td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Detalhes</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Excluir</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">Nenhum webhook cadastrado.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
