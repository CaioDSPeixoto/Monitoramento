@model MonitorDeServicos.Dominio.Entidade.Webhook

@{
    ViewData["Title"] = "Editar Webhook";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Editar Webhook</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow p-4">
                <h4 class="mb-3">Detalhes do Webhook</h4>

                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert" style="display: none;"></div>

                    <!-- Campo Nome -->
                    <div class="form-group mb-3">
                        <label asp-for="Nome" class="form-label fw-bold">Nome</label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <!-- Campo Nome do Responsável -->
                    <div class="form-group mb-3">
                        <label asp-for="NomeResponsavel" class="form-label fw-bold">Nome do Responsável</label>
                        <input asp-for="NomeResponsavel" class="form-control" />
                        <span asp-validation-for="NomeResponsavel" class="text-danger"></span>
                    </div>

                    <!-- Campo URL -->
                    <div class="form-group mb-3">
                        <label asp-for="Url" class="form-label fw-bold">URL</label>
                        <input asp-for="Url" class="form-control" />
                        <span asp-validation-for="Url" class="text-danger"></span>
                    </div>

                    <!-- Campo Ativo -->
                    <div class="form-group mb-3">
                        <label class="form-label fw-bold" for="Ativo">@Html.DisplayNameFor(model => model.Ativo)</label>
                        <select asp-for="Ativo" class="form-control">
                            <option value="true">Sim</option>
                            <option value="false">Não</option>
                        </select>
                    </div>

                    <!-- Campo Hidden para Id -->
                    <input type="hidden" asp-for="Id" />

                    <!-- Botões -->
                    <div class="d-grid gap-2">
                        <input type="submit" value="Salvar" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        <div class="text-center mt-3">
            <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
